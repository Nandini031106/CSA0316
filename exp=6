#include <stdio.h>
int fibonacci(int n) {
    if (n == 0)  // base case 1
        return 0;
    else if (n == 1)  // base case 2
        return 1;
    else
        return fibonacci(n - 1) + fibonacci(n - 2);
}
int main() {
    int n, i;
    printf("Enter the number of terms: ");
    scanf("%d", &n);
    printf("Fibonacci Series: ");
    for (i = 0; i < n; i++) {
        printf("%d ", fibonacci(i));
    }
    return 0;
}
output:
Enter the number of terms: 6  
Fibonacci Series: 0 1 1 2 3 5
